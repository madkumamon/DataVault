%header.page-header
  %h2 Your authorized applications
%table.table.table-hover
  %thead
    %tr
      %th Application
      %th Authorized at
      %th
      %th
  %tbody
    - @applications.each do |application|
      %tr
        %td= application.name
        %td= application.created_at
        %td= link_to 'Revoke', oauth_authorized_application_path(application), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger'
