
.form
  %h2 Sign up
  %hr
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f|
    = f.error_notification
    = f.input :email, :required => true, :autofocus => true
    = f.input :password, :required => true
    = f.input :password_confirmation, :required => true
    .submit_btn
      = f.button :submit, "Sign up", :class=>"btn btn-large btn-primary"
      or
      = link_to "Sign in", new_session_path(resource_name), :class=>"btn btn-large"
    %p
      = link_to "Forgot your password?", new_password_path(resource_name)
